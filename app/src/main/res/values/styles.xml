<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>



    <style name="AddTaskButton">
   <item name="android:background">@color/colorAccent</item>
   <item name="android:textColor">#FFFFFF</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
       <item name="android:layout_marginTop">439dp</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentStart">true</item>
    </style>

    <style name="DetailTitleTextView">
     <item name="android:textColor" >#7B1FA2</item>
      <item name="android:textStyle">bold</item>
       <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
          </style>

    <style name="DetailDescrTextView">
        <item name="android:textColor" >#00796B</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
    </style>
</resources>
